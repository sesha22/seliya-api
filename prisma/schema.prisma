generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(ulid())

  slug  String @unique
  name  String
  price Int

  description String
  imageUrl    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
